# Example environment variables for Beryllium bot
# Copy this file to .env and fill in your values
# Note: Environment variables use the BERYLLIUM_ prefix

# Discord Bot Token (Required)
BERYLLIUM_Bot__Token=YOUR_DISCORD_BOT_TOKEN_HERE

# Database Connection String (Optional - defaults to beryllium.db)
BERYLLIUM_Bot__DatabaseConnection=Data Source=beryllium.db

# Logging Configuration (Optional)
# BERYLLIUM_Logging__LogLevel__Default=Information
# BERYLLIUM_Logging__LogLevel__Remora=Debug
